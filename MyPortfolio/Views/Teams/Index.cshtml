@using MyPortfolio.Models
@model List<Teams>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<br />
<h2>Ekip Arkadaşlarım Sayfası</h2>
<br />
<a href="/Teams/AddTeams" class="btn btn-outline-dark">Yeni Ekip Arkdaşı Ekle</a>
<br />
<br />
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Ad Soyad</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th colspan="3" class="text-center">Sosyal Medya</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
        
            <td>@count</td>
            <td><img src="@item.ImageURL" class="img-thumbnail" style="border-radius:50%; object-fit:cover"  height="150px" width="150px" /></td>
            <td>@item.NameSurname</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><a style="color:black" href="@item.LinkedinURL"><i class="fab fa-linkedin-in"></i></a></td>
            <td><a style="color:black" href="@item.GithubURL"><i class="fab fa-github"></i></a></td>
            <td><a style="color:black" href="@item.InstagramURL"><i class="fab fa-instagram"></i></a></td>
            <td><a href="/Teams/DeleteTeams/@item.TeamID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Teams/UpdateTeams/@item.TeamID" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }

</table>
<br />




