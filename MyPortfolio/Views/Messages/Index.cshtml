@model List<MyPortfolio.Models.Messages>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
@if (Model.Count > 0)
{
    <br />
    <h2>Okunmayan Mesajlar</h2>
    <br />

    <a href="/Messages/GetAllMessage" class="btn btn-outline-secondary">Tüm Mesajlar</a>
    <a href="/Messages/GetReadedMesssage" class="btn btn-outline-secondary">Okunan Mesajlar</a>
    <br />
    <br />
    using (Html.BeginForm("GetMessageByNameSurname", "Messages", FormMethod.Post))
    {
        <input type="text" class="form-control" name="NameSurname" placeholder="Ad Soyad" />
        <br />
        <input type="submit" class="btn btn-outline-primary" value="Ara" />
        <br />
        <br />
    }


    <table class="table table-hover">
        <tr>
            <td>#</td>
            <td>Ad Soyad</td>
            <td>Email</td>
            <td>Başlık</td>
            <td>Detay</td>
            <td>Okundu Olarak İşaretle</td>
            <td>Cevapla</td>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.NameSurname</td>
                <td>@item.Email</td>
                <td>@item.Subject</td>
                <td><a class="btn btn-outline-success" href="/Messages/MessageDetail/@item.MessageID">Detay Gör</a></td>
                <td><a class="btn btn-outline-primary" href="/Messages/ReadMessage/@item.MessageID">Okundu</a></td>
                <td><a class="btn btn-outline-dark" href="mailto:@item.Email">Cevapla</a></td>
            </tr>
        }
    </table>

}
else
{
    <br />
    <h2>Mesajlar</h2>
    <br />
    <a href="/Messages/GetAllMessage" class="btn btn-outline-secondary">Tüm Mesajlar</a>
    <a href="/Messages/GetReadedMesssage" class="btn btn-outline-secondary">Okunan Mesajlar</a>
    <br />

    <br />

    <div class="alert alert-info">Bu Klasör Boş.</div>
}

