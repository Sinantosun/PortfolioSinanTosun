@using MyPortfolio.Models
@model List<Features>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}



<br />
<h2>Öne Çıkan Sayfası</h2>
<br />
<a href="/Feature/AddFeature" class="btn btn-outline-dark">Yeni Alan Ekle</a>

<br />
<br />
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Başlık</th>
        <th>Görsel</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.NameSurname</td>
            <td>@item.Title</td>
            <td><img src="@item.ImageUrl" class="img-thumbnail" style="object-fit:cover; width:100px; height:100px;" /></td>
            <td>@(item.Status == true ? "Aktif" : "Pasif")</td>
            <td><a href="/Feature/DeleteFeature/@item.FeatureID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Feature/UpdateFeature/@item.FeatureID" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }

</table>
<br />

