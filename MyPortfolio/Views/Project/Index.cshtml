@model List<MyPortfolio.Models.Projects>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<br />
<h2>Projelerim Sayfası</h2>
<br />
<a href="/Project/AddProject/" class="btn btn-outline-dark">Yeni Proje Ekle</a>
<br />
<table class="table table-hover" >
    <tr>
        <th>#</th>
        <td class="text-center">Görsel</td>
        <td>Proje Adı</td>
        <td>Kategori  Adı</td>
        <td>Github</td>
        <td class="text-center" colspan="2">İşlem</td>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td style="text-align:center"><img src="@item.Image" class="img img-thumbnail" style="width:300px;  height:300px; object-fit:cover" alt="Project Image - @count" /></td>
            <td>@item.Name</td>
            <td>@item.Categories.Name</td>
            <td><a href="@item.Github" class="btn btn-outline-primary">Github'da Aç</a></td>
            <td><a href="/Project/DeleteProject/@item.ProjectID" class="btn btn-outline-success">Sil</a></td>
            <td><a href="/Project/UpdateProject/@item.ProjectID" class="btn btn-outline-danger">Güncelle</a></td>
        </tr>
       
    }
</table>